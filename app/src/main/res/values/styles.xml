<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="splash_theme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CustomAppTheme_textinputLayout" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- <item name="colorAccent">#3498db</item> -->
        <!--<item name="android:textColorHint">@color/alpha_white</item>-->
        <!--<item name="colorControlNormal">@color/alpha_white</item>-->
        <!--<item name="colorControlActivated">@color/white</item>-->
        <!--<item name="colorControlHighlight">@color/white</item>-->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="HintTextInputAppTheme" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/colorGray1</item>
        <item name="android:textSize">@dimen/sp_13</item>
    </style>

    <style name="ErrorTextInputAppTheme" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/sp_13</item>
    </style>
</resources>
