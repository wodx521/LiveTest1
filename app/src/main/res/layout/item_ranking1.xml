<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:padding="5dp">

    <com.lairui.livetest1.ui.panel.CircleImageView
        android:id="@+id/ivUserIcon"
        android:layout_width="65dp"
        android:layout_height="0dp"
        android:src="@drawable/chatroom_01"
        app:layout_constraintBottom_toBottomOf="@id/ivFirst"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/ivFirst"
        app:layout_constraintStart_toStartOf="@id/ivFirst"
        app:layout_constraintTop_toTopOf="@id/ivFirst" />

    <ImageView
        android:id="@+id/ivFirst"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_live_ranking_list_header_first"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@id/ivFollow"
        app:layout_constraintStart_toEndOf="@id/ivUserIcon"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="center_vertical"
                android:text="测试1"
                android:textColor="@color/color_black" />

            <ImageView
                android:id="@+id/ivSecondGender"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignTop="@id/tvUserName"
                android:layout_alignBottom="@id/tvUserName"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/tvUserName"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:src="@drawable/selected_female" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvUserDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/colorGray1"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/ivUserIcon"
            app:layout_constraintEnd_toStartOf="@id/ivFollow"
            app:layout_constraintStart_toEndOf="@id/ivUserIcon"
            app:layout_constraintTop_toBottomOf="@id/tvUserName" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>