<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5">

    <ImageView
        android:id="@+id/ivVideoCover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@null"
        android:src="@drawable/chatroom_01"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvVideoAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:text="用户名"
        android:textColor="@color/color_white"
        app:layout_constraintBottom_toTopOf="@id/ivVideoAuthor"
        app:layout_constraintStart_toStartOf="@id/ivVideoCover" />

    <com.lairui.livetest1.ui.panel.CircleImageView
        android:id="@+id/ivVideoAuthor"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_margin="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@id/ivVideoCover"
        app:layout_constraintStart_toStartOf="@id/ivVideoCover" />

    <TextView
        android:id="@+id/tvWatchNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/shape_gray3_round20"
        android:drawableStart="@drawable/small_video_list_video"
        android:drawablePadding="@dimen/dp_5"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_5"
        android:text="0"
        android:textColor="@color/color_white"
        app:layout_constraintBottom_toBottomOf="@id/ivVideoAuthor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivVideoAuthor" />
</android.support.constraint.ConstraintLayout>